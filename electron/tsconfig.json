{
   "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020",
      "lib": ["ES2020", "DOM"],
      "noImplicitAny": true,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "compiled",
      "strict": true,
      "verbatimModuleSyntax": false,
      "moduleResolution": "node",
      "types": ["node"],
      "skipLibCheck": true
   },
   "include": ["src/**/*"]
}
